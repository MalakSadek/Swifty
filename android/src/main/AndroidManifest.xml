<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="malaksadek.swifty">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconpng"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/iconpng"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".OpeningActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="malaksadek.swifty.SignUpActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="malaksadek.swifty.OpeningActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="malaksadek.swifty.OpeningActivity" />
        </activity>
        <activity android:name="malaksadek.swifty.SignInActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="malaksadek.swifty.OpeningActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="malaksadek.swifty.OpeningActivity" />
        </activity>
        <activity android:name="malaksadek.swifty.TopicsActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="malaksadek.swifty.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="malaksadek.swifty.MenuActivity" />
        </activity>
        <activity android:name="malaksadek.swifty.ProfileActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="malaksadek.swifty.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="malaksadek.swifty.MenuActivity" />
        </activity>
        <activity android:name="malaksadek.swifty.ScoreActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="malaksadek.swifty.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="malaksadek.swifty.MenuActivity" />
        </activity>
        <activity android:name="malaksadek.swifty.MenuActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name="malaksadek.swifty.QuizActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="malaksadek.swifty.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="malaksadek.swifty.MenuActivity" />
        </activity>
        <activity android:name="malaksadek.swifty.LeaderboardActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name="malaksadek.swifty.VerificationActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>